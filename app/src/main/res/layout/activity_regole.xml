<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sfondo3"
    tools:context=".RegoleActivity">

    <ImageButton
        android:id="@+id/btnHome4"
        android:layout_width="63dp"
        android:layout_height="59dp"
        android:background="@drawable/home"
        android:contentDescription="@string/app_name"
        android:onClick="onClickHome"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.976"
        app:srcCompat="@android:drawable/btn_star" />

    <TextView
        android:id="@+id/twTitolo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="COME SI GIOCA:"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/btnHome4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.459"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.092" />

    <TextView
        android:id="@+id/twRegole"
        android:layout_width="346dp"
        android:layout_height="149dp"
        android:text="Il gioco consiste nell'estrazione a sorte dei numeri presenti nella cartella: l'obiettivo è spuntare (marcare) più numeri possibili sulla propria cartella presenti tra quelli estratti. Il gioco si conclude quando un giocatore spunta tutti i numeri su una cartella e preme il bottone BINGO."
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toTopOf="@+id/btnHome4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/twTitolo"
        app:layout_constraintVertical_bias="0.05" />

</androidx.constraintlayout.widget.ConstraintLayout>